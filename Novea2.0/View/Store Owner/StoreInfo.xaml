<Page x:Class="Novea2._0.View.Store_Owner.StoreInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novea2._0.View.Store_Owner" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="477" d:DesignWidth="820"
      Title="StoreInfo"
      x:Name="StoreInfoPage"
      DataContext="{StaticResource StoreInfoVM}">

    <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding Loadwd}"
                                       CommandParameter="{Binding ElementName=StoreInfoPage}"></i:InvokeCommandAction>
            </i:EventTrigger>
     </i:Interaction.Triggers>
    
    <Border Height="565"
            Width="820"
            CornerRadius="0 0 30 0">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="202*"/>
                        <RowDefinition Height="267*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="226"/>
                        <ColumnDefinition Width="311"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,0,1" Grid.RowSpan="2">
                        <Ellipse Height="170" Width="170"                             
                                 VerticalAlignment="Top" 
                                 HorizontalAlignment="Center"
                                 Margin="0,32,0,0" StrokeThickness="5">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Color="Black"
                                                  Opacity="10"
                                                  BlurRadius="10"/>
                            </Ellipse.Effect>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="img" ImageSource="{Binding Ava}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Button Grid.Row="1"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"
                            Margin="0,76,0,0"                              
                            Style="{StaticResource MaterialDesignFlatMidBgButton}"                              
                            Content="Thay đổi ảnh" 
                            FontFamily="{StaticResource Custom}"                              
                            Width="150" Height="40" 
                            Foreground="{StaticResource plainTextColor2}"                               
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"                           
                            BorderBrush="{StaticResource color1}">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                                <GradientStop Color="Yellow" Offset="0"/>
                                <GradientStop Color="Orange" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3"
                                              Color="Orange"
                                              Opacity="0.5"
                                              BlurRadius="5"/>
                        </Button.Effect>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddImage}"
                                                       CommandParameter="{Binding ElementName=img}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Grid Grid.Column="1" Margin="0,0,0,1" Grid.RowSpan="2">
                        <StackPanel Margin="10,10,-228,10">
                            <Border>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="5"
                                                      Color="Orange"
                                                      Opacity="0.5"
                                                      BlurRadius="10"/>
                                </Border.Effect>
                                <TextBox Margin="0,20,0,20" 
                                         Width="300"
                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                         materialDesign:TextFieldAssist.UnderlineBrush="Orange"
                                         materialDesign:HintAssist.Foreground="Orange"
                                         Height="47"
                                         FontSize="12"
                                         Background="White"
                                         FontWeight="Bold"
                                         HorizontalAlignment="Left"
                                         FontFamily="{StaticResource Custom}"
                                         MaxWidth="529"
                                         x:Name="tbName"
                                         materialDesign:HintAssist.Hint="Tên cửa hàng" 
                                         Text="{Binding Name}"/>
                            </Border>

                            <Border>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="5"
                                                      Color="Orange"
                                                      Opacity="0.5"
                                                      BlurRadius="10"/>
                                </Border.Effect>
                                <TextBox  Margin="0,10,0,20" 
                                          Style="{StaticResource MaterialDesignFilledTextBox}"
                                          VerticalAlignment="Center"
                                          materialDesign:TextFieldAssist.UnderlineBrush="Orange"
                                          materialDesign:HintAssist.Foreground="Orange"
                                          Height="47"
                                          FontSize="12"
                                          Background="White"
                                          FontWeight="Bold"
                                          AcceptsReturn="True"
                                          TextWrapping="Wrap"
                                          MaxWidth="529" 
                                          x:Name="tbAddress"
                                          FontFamily="{StaticResource Custom}"
                                          materialDesign:HintAssist.Hint="Địa chỉ" 
                                          Text="{Binding DiaChi}" 
                                          Width="529"/>
                            </Border>

                            <Border>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="5"
                                                      Color="Orange"
                                                      Opacity="0.5"
                                                      BlurRadius="10"/>
                                </Border.Effect>
                                <TextBox Margin="0,10,0,10" 
                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                         VerticalAlignment="Center"
                                         materialDesign:TextFieldAssist.UnderlineBrush="Orange"
                                         materialDesign:HintAssist.Foreground="Orange"
                                         Height="47"
                                         FontSize="12"
                                         Background="White"
                                         FontWeight="Bold"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MaxWidth="600" 
                                         x:Name="tbMail"
                                         FontFamily="{StaticResource Custom}"
                                         materialDesign:HintAssist.Hint="Email" 
                                         Text="{Binding Mail}" 
                                         Width="529"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="2" Margin="0,0,0,10" Grid.RowSpan="2">
                        <StackPanel Margin="10,10,-10,-10">
                            <Border>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="5"
                                                      Color="Orange"
                                                      Opacity="0.5"
                                                      BlurRadius="10"/>
                                </Border.Effect>
                                <TextBox Margin="0,20,0,10" 
                                         Width="220"
                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                         VerticalAlignment="Center"
                                         materialDesign:TextFieldAssist.UnderlineBrush="Orange"
                                         materialDesign:HintAssist.Foreground="Orange"
                                         Height="47"
                                         FontSize="12"
                                         Background="White"
                                         FontWeight="Bold"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         HorizontalAlignment="Left" 
                                         x:Name="tbSDT"
                                         FontFamily="{StaticResource Custom}"
                                         materialDesign:HintAssist.Hint="Số điện thoại" 
                                         Text="{Binding SDT}"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <Button Grid.Row="1"                                
                    Style="{StaticResource MaterialDesignRaisedButton}"                       
                    Width="390" 
                    Margin="329,363,101,121"  
                    Height="45"
                    Content="CẬP NHẬT THÔNG TIN" 
                    FontFamily="{StaticResource Custom}"                       
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                    Foreground="{StaticResource plainTextColor2}">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                        <GradientStop Color="Yellow" Offset="0"/>
                        <GradientStop Color="Orange" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="3"
                                      Color="Orange"
                                      Opacity="0.5"
                                      BlurRadius="5"/>
                </Button.Effect>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding UpdateInfo}"
                                               CommandParameter="{Binding ElementName=StoreInfoPage}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>
    </Border>
</Page>
